@model IEnumerable<BIM_wineProject.Models.Producer>

@{
    ViewBag.Title = "Producers List";
}

<h3>Producers List</h3>

<p>
    @Html.ActionLink("New Producer", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BottleID)
        </th>
        
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Details", new { ProducerID = item.ProducerID })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BottleID)
            </td>
           
            <td>
                @Html.ActionLink("Edit", "Edit", new { ProducerID = item.ProducerID }) |
                @Html.ActionLink("Delete", "Delete", new { ProducerID = item.ProducerID })
            </td>
        </tr>
    }

</table>  